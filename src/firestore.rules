
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin user ID
    function isAdmin() {
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /distributors/{distributorId} {
      // Allow signed-in users to read distributor data for tree views and sponsor lookups.
      allow read: if isSignedIn(); 
      
      // Allow any authenticated user to create their own profile during sign-up.
      allow create: if isSignedIn();
      
      // Allow a user to update their own profile, an admin to update any profile,
      // or an authenticated user to claim a pre-existing profile.
      allow update: if isAdmin() || isOwner(distributorId) || isSignedIn();

      // Only admins should be able to delete distributors.
      allow delete: if isAdmin();
      
      match /performanceMetrics/{metricId} {
        // Only the owner or an admin can access performance metrics.
        allow read, write: if isAdmin() || isOwner(distributorId);
      }
    }

    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
