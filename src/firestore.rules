
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin user ID
    function isAdmin() {
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /distributors/{distributorId} {
      // Allow signed-in users to read distributor data for tree views and sponsor lookups.
      allow read: if isSignedIn(); 
      
      // Allow any authenticated user to create a profile (sign up) or delete one (account claiming).
      allow create, delete: if isSignedIn();

      // Only allow a user to update their own profile, or an admin to update any profile.
      allow update: if isAdmin() || isOwner(distributorId);
      
      match /performanceMetrics/{metricId} {
        // Only the owner or an admin can access performance metrics.
        allow read, write: if isAdmin() || isOwner(distributorId);
      }
    }

    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
