
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin user ID
    function isAdmin() {
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /distributors/{distributorId} {
      // Allow public read access to main distributor profiles for sponsor lookup,
      // but protect all subcollections.
      allow read; 
      allow create: if isAdmin() || isOwner(distributorId);
      allow update: if isAdmin() || isOwner(distributorId);
      allow delete: if isAdmin();

      // Lock down subcollections to signed-in users or owners.
      match /performanceMetrics/{metricId} {
        allow read: if isSignedIn();
        allow write: if isAdmin() || isOwner(distributorId);
      }
    }

    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
