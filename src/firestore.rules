
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // A user is the owner if their UID matches the document ID (for docs created by signed-in users)
    // OR if their UID matches the 'uid' field in the document (for claimed pre-registered users).
    function isOwner(userId) {
      return request.auth.uid == userId || (resource.data.uid != null && request.auth.uid == resource.data.uid);
    }

    // Allows a specific, narrow query for an unauthenticated user trying to claim an account.
    function isQueryingForRegistrationCode() {
        // Ensure the query has a limit of 1 and is only filtering on 'registrationCode'.
        // This is a strict check to prevent unauthorized data scanning.
        return request.auth == null
            && request.query.limit == 1
            && request.query.where[0][0] == "registrationCode"
            && request.query.where[0][1] == "==";
    }

    // Rules for the 'distributors' collection
    match /distributors/{distributorId} {
      // READ: Allow reads if user is signed in.
      // Exception: Allow the specific query for a registration code.
      allow list: if isSignedIn() || isQueryingForRegistrationCode();
      allow get: if isSignedIn();

      // CREATE: A user can create their own doc if the ID matches their UID, or an admin can create docs.
      allow create: if isOwner(distributorId) || isAdmin();

      // UPDATE: A user can update their own profile (checked by isOwner), an admin can update any profile,
      // or an auth user can claim a doc by updating the UID field.
      allow update: if isOwner(distributorId) || isAdmin() || (isSignedIn() && request.resource.data.uid == request.auth.uid);

      // DELETE: Only admins can delete.
      allow delete: if isAdmin();

      // Subcollection rules
      match /performanceMetrics/{metricId} {
        // Only the owner or an admin can access performance metrics.
        allow read, write: if isOwner(distributorId) || isAdmin();
      }
    }

    // Rules for the 'libraryAssets' collection
    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
