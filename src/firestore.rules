
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin user ID
    function isAdmin() {
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Allow anyone to read referral codes for account claiming
    function canReadPublicDistributorData() {
      return isSignedIn() || (resource.data.keys().hasAll(['referralCode']));
    }

    match /distributors/{distributorId} {
      // Allow reads for sign-up/sponsor lookup.
      // Allow owner/admin full access.
      allow read: if isSignedIn(); 
      
      // Allow anyone to create a distributor document (sign up).
      // Allow an owner to update their own profile.
      // Allow admins to update any profile.
      allow create: if request.auth != null;
      allow update: if isAdmin() || isOwner(distributorId);
      
      // Only admins can delete accounts.
      // Allow signed-in users to delete their own placeholder doc during account claim.
      allow delete: if isAdmin() || (resource.data.id != request.auth.uid);
      
      match /performanceMetrics/{metricId} {
        // Only the owner or an admin can access performance metrics.
        allow read, write: if isAdmin() || isOwner(distributorId);
      }
    }

    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
