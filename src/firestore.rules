
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin user ID
    function isAdmin() {
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /distributors/{distributorId} {
      // Any signed-in user can read the collection for the tree view and individual profiles.
      allow read: if isSignedIn();
      
      // A user can create their own doc, or an admin can create docs for others.
      allow create: if isOwner(distributorId) || isAdmin();
      
      // A user can update their own profile, or an admin can update any profile.
      allow update: if isOwner(distributorId) || isAdmin();

      // Only admins should be able to delete distributors.
      allow delete: if isAdmin();
      
      match /performanceMetrics/{metricId} {
        // Only the owner or an admin can access performance metrics.
        allow read, write: if isOwner(distributorId) || isAdmin();
      }
    }

    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
