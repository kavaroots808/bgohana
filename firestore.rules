
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin user ID
    function isAdmin() {
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /distributors/{distributorId} {
      // Allow reading a distributor document under specific conditions:
      // 1. The user is the owner of the document.
      // 2. The user is an admin.
      // 3. An unauthenticated user is querying by a registration code during signup.
      allow read: if isOwner(distributorId) 
                  || isAdmin() 
                  || (request.auth == null && request.query.keys.hasAny(['registrationCode']));

      allow create: if isAdmin() || isOwner(distributorId);
      allow update: if isAdmin() || isOwner(distributorId);
      allow delete: if isAdmin();

      // Lock down subcollections to owners or admins.
      match /performanceMetrics/{metricId} {
        allow read: if isOwner(distributorId) || isAdmin();
        allow write: if isAdmin() || isOwner(distributorId);
      }
    }

    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
