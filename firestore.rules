
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin user ID
    function isAdmin() {
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /distributors/{distributorId} {
      // Combined read rule to handle all cases:
      // 1. An owner can read their own document.
      // 2. An admin can read any document.
      // 3. Any signed-in user can list the collection (for the tree).
      allow read: if isAdmin() || isOwner(distributorId) || (request.method == 'list' && isSignedIn());
      
      // Create/Update/Delete rules remain specific.
      allow create: if isOwner(distributorId) || isAdmin();
      allow update: if isOwner(distributorId) || isAdmin();
      allow delete: if isAdmin();
      
      match /performanceMetrics/{metricId} {
        // Only the owner or an admin can access performance metrics.
        allow read, write: if isOwner(distributorId) || isAdmin();
      }
    }

    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
