
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // A user is the owner if their UID matches the document ID.
    // This is the primary ownership check now.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // A user is attempting to claim an account if they are creating their own document
    // AND the document they are creating contains a `uid` field that matches their auth uid.
    function isClaimingAccount(userId) {
      return request.auth.uid == userId && request.resource.data.uid == request.auth.uid;
    }
    
    // Allows a specific, narrow query for an unauthenticated user trying to claim an account.
    function isQueryingForRegistrationCode() {
        // This rule allows a list query only if it's narrow and specific.
        return request.auth == null
            && request.query.limit == 1
            && request.query.where[0][0] == "registrationCode"
            && request.query.where[0][1] == "==";
    }

    // Rules for the 'distributors' collection
    match /distributors/{distributorId} {
      // READ:
      // - Allow reads if user is signed in.
      // - Allow reads if it's the specific query for a registration code.
      allow read: if isSignedIn() || isQueryingForRegistrationCode();

      // CREATE:
      // - A user can create their own doc if the ID matches their UID. This is the standard signup.
      // - Admins can create docs.
      allow create: if isOwner(distributorId) || isAdmin();

      // UPDATE:
      // - An owner can update their own profile.
      // - An admin can update any profile.
      allow update: if isOwner(distributorId) || isAdmin();

      // DELETE:
      // - Only admins can delete fully-formed distributor accounts.
      // - A user can delete their own placeholder doc during the claim process (the doc with a random ID).
      allow delete: if isAdmin() || (isSignedIn() && resource.data.uid == null);

      // Subcollection rules
      match /performanceMetrics/{metricId} {
        // Only the owner or an admin can access performance metrics.
        allow read, write: if isOwner(distributorId) || isAdmin();
      }
    }

    // Rules for the 'libraryAssets' collection
    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
