
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================

    function isAdmin() {
      // For now, admin is a hardcoded UID.
      // In a production app, this should check for a custom claim:
      // return request.auth.token.admin == true;
      return request.auth.uid == 'eFcPNPK048PlHyNqV7cAz57ukvB2';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // =================================
    // Data Validation Functions
    // =================================

    function isDistributorData(data) {
      return data.firstName is string &&
             data.lastName is string &&
             data.email is string &&
             data.joinDate is string &&
             (data.status == 'funded' || data.status == 'not-funded') &&
             // parentId/sponsorId is a string, but can be null for the root
             (data.sponsorId == null || data.sponsorId is string) &&
             // placementPosition can be a string
             (data.placementPosition is string) &&
             data.referralCode is string &&
             // registrationCode can be null or a string
             (data.registrationCode == null || data.registrationCode is string);

    }

    function isLibraryAssetData(data) {
        return data.title is string && data.title.size() > 0 &&
               (data.type == 'document' || data.type == 'image' || data.type == 'video') &&
               data.fileUrl is string && data.fileUrl.matches('https?://.+') &&
               data.createdAt is string;
    }

    // =================================
    // Collection Rules
    // =================================

    match /distributors/{distributorId} {
      // READ:
      // - Any signed-in user can read distributor profiles.
      // - This is left open for now to support the main genealogy tree view for all users.
      // - In a stricter model, we could limit this to only users in the same upline/downline.
      allow read: if isSignedIn();

      // CREATE:
      // - A user can create their own doc if the ID matches their UID.
      // - Admins can create docs.
      allow create: if isOwner(distributorId) || isAdmin();

      // UPDATE:
      // - An owner can update their own profile.
      // - An admin can update any profile.
      // - Data must be valid.
      allow update: if isOwner(distributorId) || isAdmin();

      // DELETE:
      // - An admin can delete any account.
      // - A signed-in user can delete a placeholder doc during the claim process.
      allow delete: if isAdmin() || isSignedIn();

      // Subcollection: performanceMetrics
      match /performanceMetrics/{metricId} {
        // Only the owner or an admin can access performance metrics.
        allow read, write: if isOwner(distributorId) || isAdmin();
      }
    }

    match /libraryAssets/{assetId} {
      allow read: if isSignedIn();
      // Only admins can create/update/delete, and the data must be valid.
      allow write: if isAdmin() && isLibraryAssetData(request.resource.data);
    }
  }
}
